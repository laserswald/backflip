#!/bin/sh
# backflip 
# Start my personal wmutils settings.

source ~/.config/backflip/backfliprc
exec ~/.config/backflip/autostart &

sxhkd -f 90 -c ~/.config/backflip/keybinds.sxhkd &

wew | while IFS=: read ev wid; do
case $ev in
    # Window focusing
    7) 
    focus $wid
    ;;

    # occurs on mapped windows
    16) 

    routine $wid
    chwb -s 1 $wid

    ;;
    esac
done
