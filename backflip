#!/bin/sh
# backflip 
# Start my personal wmutils settings.

shoutout &
platform &
sxhkd -c ~/bin/backflip.sxhkd -f 90 &

wew | while IFS=: read ev wid; do
case $ev in
    # Window focusing
    7) 
    focus $wid
    ;;

    # occurs on mapped windows
    16) 
   
    routine $wid
    chwb -s 1 $wid

    ;;
    esac
done
